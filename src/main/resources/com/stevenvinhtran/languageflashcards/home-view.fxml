<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="homeAnchorPane" minHeight="720.0" minWidth="960.0" prefHeight="720.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stevenvinhtran.languageflashcards.Controller.HomeController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
         <Label fx:id="welcomeLabel" text="Welcome to Language Flashcards!" translateY="-50.0">
            <font>
               <Font size="56.0" />
            </font>
         </Label>
         <HBox alignment="TOP_CENTER" prefHeight="190.0" prefWidth="879.0" spacing="100.0">
            <children>
               <Button fx:id="studyVocabularyButton" onAction="#goToVocabularyScene" prefHeight="190.0" prefWidth="340.0" text="Study Vocabulary">
                  <font>
                     <Font size="37.0" />
                  </font>
               </Button>
               <Button fx:id="studyGrammarButton" onAction="#goToGrammarScene" prefHeight="190.0" prefWidth="340.0" text="Study Grammar">
                  <font>
                     <Font size="39.0" />
                  </font>
               </Button>
            </children>
         </HBox>
        <Button fx:id="editTermsButton" onAction="#goToBrowserScreen" prefHeight="90.0" prefWidth="240.0" text="Edit Terms" translateY="100.0">
            <font>
               <Font size="39.0" />
            </font>
         </Button>
      </VBox>
   </children>
</AnchorPane>
